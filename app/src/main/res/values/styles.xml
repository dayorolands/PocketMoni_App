<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/pocketmoni_deep_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SettingsFonts">
        <item name="android:textSize">11sp</item>
        <item name="color">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="SwitchBtnTheme">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="AmountBtnFonts" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SubTitleTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EnterPinBtnFonts">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/pocketmoni_white_smoke</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="pocketmoni_default_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@drawable/default_button_color_selector</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="pocketmoni_title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mukta_medium</item>
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="pocketmoni_title_text_style.login_title">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="pocketmoni_title_caption_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/pocketmoni_text_color</item>
    </style>

    <style name="pocketmoni_default_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxBackgroundColor">@color/pocketmoni_edittext_background</item>
        <item name="boxStrokeColor">@color/pocketmoni_carousel_inactive_grey</item>
        <item name="boxStrokeWidth">1px</item>
        <item name="boxStrokeWidthFocused">1px</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="pocketmoni_default_text_input_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="alternate_action_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="register_top_level_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="register_sublevel_ll_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProgressStyle">
        <item name="colorAccent">#7E8B96</item>
    </style>

    <style name="ElectricitySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#BDBDBD</item>
    </style>


    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6bd505</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="DropDownInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6bd505</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#6bd505</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
