<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/display_layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_selection"
            android:padding="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_discos_ellipse_background"
                android:gravity="center">
                <ImageView
                    android:id="@+id/disco_icon_id"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/select_disco" />
            </RelativeLayout>
            <TextView
                android:id="@+id/disco_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="#333333"
                android:textSize="15sp"
                android:text="@string/eko_electricity"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_below="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"/>
</RelativeLayout>