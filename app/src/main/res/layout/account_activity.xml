<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    android:background="#E5E5E5"
    tools:context=".View.HomeActivity.AccountActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <ImageView
                    android:id="@+id/back_btn_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/clear_icon"/>
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="@string/account"/>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/pocketmoni_white_smoke"/>

            <RelativeLayout
                android:id="@+id/layer_two"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_centerHorizontal="true"
                    android:id="@+id/agent_initials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/light_purple_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/initials"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I.A"
                        android:textColor="#001042"
                        android:textSize="35sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_below="@+id/agent_initials"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/agent_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:text="@string/name_place_holder"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:background="@drawable/light_purple_border"
                        android:textColor="#001042"
                        android:text="@string/you_are_currently_on_tier_1"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#4F4F4F"
                android:text="@string/first_name"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:inputType="text"
                android:textColor="#333333"
                android:hint="@string/ifeanyi"
                android:id="@+id/phoneInputLayout"
                android:background="@drawable/custom_border_update_edittext"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#4F4F4F"
                android:text="@string/last_name"/>


            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:hint="@string/azubuike"
                android:id="@+id/pinTextInputLayout"
                android:inputType="text"
                android:background="@drawable/custom_border_update_edittext"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#4F4F4F"
                android:text="@string/email"/>


            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/email_box"
                android:hint="@string/ifeanyi_azubuike_etranzactng_com"
                android:textColor="#333333"
                android:inputType="textEmailAddress"
                android:background="@drawable/custom_border_update_edittext"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#4F4F4F"
                android:text="@string/phone_number"/>


            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/phone_number_hint"
                android:textColor="#333333"
                android:id="@+id/phone_box"
                android:inputType="phone"
                android:background="@drawable/custom_border_update_edittext"/>

            <Button
                android:id="@+id/update_id"
                android:background="@drawable/custom_border_update_btn"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/update"
                android:textColor="#333333"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>