<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:background="#FFFFFF"
    tools:context=".View.Electricity.ElectricityPaymentMethodActivity">

    <LinearLayout
        android:id="@+id/mimic_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <ImageView
                android:padding="5dp"
                android:id="@+id/back_btn_id"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_icon"/>

            <TextView
                android:id="@+id/title_label_id"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="20sp"
                android:text="@string/payment_method"/>
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/pocketmoni_white_smoke"/>
    </LinearLayout>

    <View
        android:id="@+id/first_bar"
        android:layout_below="@id/mimic_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#F5F5F5"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/mimic_actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/debit_card_id"
            android:clickable="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:text="@string/select_option" />
            <RelativeLayout
                android:background="@drawable/custom_selection"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="70dp"
                    android:layout_width="70dp"
                    android:id="@+id/appCompatImageView"
                    android:src="@drawable/ic_debit_card_icon"/>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/appCompatImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView6"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:text="@string/debit_card"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/conduct_your_transaction_using_customer_s_debit_card"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#F5F5F5"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/deposit_id"
            android:clickable="true"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">
            <RelativeLayout
                android:background="@drawable/custom_selection"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="70dp"
                    android:layout_width="70dp"
                    android:id="@+id/appCompatImageView2"
                    android:src="@drawable/ic_cash_icon" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/appCompatImageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:text="@string/deposit"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/conduct_your_transaction_using_with_a_cash_deposit"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#F5F5F5"/>
    </LinearLayout>

</RelativeLayout>