<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".View.EodActivity.ReprintActivity">

    <LinearLayout
        android:id="@+id/layer_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="20dp"
                android:id="@+id/back_btn_id"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_icon"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="@string/transaction_details"/>
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/pocketmoni_white_smoke"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_type"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/trans_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_no"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/card_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terminal_date"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/terminal_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trans_time"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/terminal_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_holder"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/card_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_type"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/card_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rrn"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/trans_rrn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/trans_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#001042"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:layout_marginBottom="25dp"
                android:textStyle="italic"
                android:textSize="15sp"/>
            <TextView
                android:gravity="right"
                android:id="@+id/trans_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#001042"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/print_receipt"
            android:background="@drawable/custom_border_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/print_receipt"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>