<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:background="#FFFFFF"
    tools:context=".View.Cashout.AmountActivity">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <ImageView
                android:background="@drawable/custom_selection"
                android:paddingEnd="30dp"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:id="@+id/back_btn_id"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_icon"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="20sp"
                android:text="@string/cash_out_with_debit_card"/>
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/pocketmoni_white_smoke"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_below="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/amt_layout"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/amt_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#4F4F4F"
                android:text="@string/amount_ngn"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/amt_label"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_border_amount"
                android:gravity="start"
                android:text="0.00"
                android:textAlignment="textStart"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_below="@+id/amt_layout"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_alignParentStart="true"
                        android:tag="button"
                        android:text="1"
                        style="@style/AmountBtnFonts"/>

                    <Button
                        android:layout_centerInParent="true"
                        android:tag="button"
                        android:text="2"
                        style="@style/AmountBtnFonts"/>

                    <Button
                        android:layout_alignParentEnd="true"
                        android:tag="button"
                        android:text="3"
                        style="@style/AmountBtnFonts"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_alignParentStart="true"
                        android:tag="button"
                        android:text="4"
                        style="@style/AmountBtnFonts"/>
                    <Button
                        android:layout_centerInParent="true"
                        android:tag="button"
                        android:text="5"
                        style="@style/AmountBtnFonts" />
                    <Button
                        android:layout_alignParentEnd="true"
                        android:tag="button"
                        android:text="6"
                        style="@style/AmountBtnFonts" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_alignParentStart="true"
                        android:tag="button"
                        android:text="7"
                        style="@style/AmountBtnFonts" />

                    <Button
                        android:layout_centerInParent="true"
                        android:tag="button"
                        android:text="8"
                        style="@style/AmountBtnFonts" />
                    <Button
                        android:layout_alignParentEnd="true"
                        android:tag="button"
                        android:text="9"
                        style="@style/AmountBtnFonts" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_alignParentStart="true"
                        android:tag="button"
                        android:text="0"
                        style="@style/AmountBtnFonts" />

                    <Button
                        android:layout_centerInParent="true"
                        android:layout_width="85dp"
                        android:id="@+id/btn_clear"
                        android:textColor="#FF9000"
                        android:text="C"
                        android:tag="clear_button"
                        android:textSize="25sp"
                        style="@style/AmountBtnFonts"/>

                    <Button
                        android:layout_alignParentEnd="true"
                        android:layout_width="89dp"
                        android:layout_height="54dp"
                        android:id="@+id/btn_enter"
                        android:text="@string/enter"
                        android:textColor="#009999"
                        android:tag="enter_button"
                        android:textSize="20sp"
                        style="@style/AmountBtnFonts"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/insert_card_label"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_insert_card"
            android:textColor="#333333"
            android:textSize="25sp"/>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/insert_card_label"/>

    </RelativeLayout>

</RelativeLayout>